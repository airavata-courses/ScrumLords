apiVersion: "autoscaling/v2beta1"
kind: "HorizontalPodAutoscaler"
metadata:
  name: "weather-data-retrieval-hpa"
  namespace: {{ kube_namespace }}
  labels:
    app: "weather-data-retrieval"
spec:
  scaleTargetRef:
    kind: "Deployment"
    name: "weather-data-retrieval"
    apiVersion: "apps/v1"
  minReplicas: 1
  maxReplicas: 5
  metrics:
  - type: "Resource"
    resource:
      name: "cpu"
      targetAverageUtilization: 80
